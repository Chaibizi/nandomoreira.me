
<!-- only build site -->
<% if build? %>
  <meta property="og:description" content="<%= site_description %>">
  <meta property="og:type" content="website">
  <meta property="og:image" content="<%= site_url %><%= image_path('social.png') %>">
  <meta property="og:url" content="<%= site_url %><%= current_page.url %>">
  <meta property="og:site_name" content="<%= site_author %>">
  <meta property="twitter:description" content="<%= site_description %>">
  <meta property="twitter:image" content="<%= site_url %><%= image_path('social.png') %>">
<% end %><!-- /only build site -->
